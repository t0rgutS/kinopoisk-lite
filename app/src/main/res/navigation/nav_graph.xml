<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieList">

    <fragment
        android:id="@+id/movieList"
        android:name="com.kinopoisklite.view.MovieListView"
        android:label="movie_list_fragment"
        tools:layout="@layout/movie_list_fragment" >
        <action
            android:id="@+id/action_movieList_to_movie"
            app:destination="@id/movie" />
    </fragment>
    <fragment
        android:id="@+id/movie"
        android:name="com.kinopoisklite.view.MovieView"
        android:label="movie_fragment"
        tools:layout="@layout/movie_fragment" >
        <action
            android:id="@+id/action_movie_to_coverFragment"
            app:destination="@id/coverFragment" />
    </fragment>
    <fragment
        android:id="@+id/coverFragment"
        android:name="com.kinopoisklite.view.CoverFragment"
        android:label="cover_fragment"
        tools:layout="@layout/cover_fragment" />
</navigation>