<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieList">

    <fragment
        android:id="@+id/movieList"
        android:name="com.kinopoisklite.view.MovieListView"
        android:label="movie_list_fragment"
        tools:layout="@layout/movie_list_fragment" >
        <action
            android:id="@+id/action_movieList_to_movie"
            app:destination="@id/movie" />
        <action
            android:id="@+id/action_movieList_to_userCabinet"
            app:destination="@id/userCabinet" />
    </fragment>
    <fragment
        android:id="@+id/movie"
        android:name="com.kinopoisklite.view.MovieView"
        android:label="movie_fragment"
        tools:layout="@layout/movie_fragment" >
        <action
            android:id="@+id/action_movie_to_coverFragment"
            app:destination="@id/coverFragment" />
        <action
            android:id="@+id/action_movie_to_userCabinet"
            app:destination="@id/userCabinet" />
    </fragment>
    <fragment
        android:id="@+id/coverFragment"
        android:name="com.kinopoisklite.view.CoverFragment"
        android:label="cover_fragment"
        tools:layout="@layout/cover_fragment" >
        <action
            android:id="@+id/action_coverFragment_to_userCabinet"
            app:destination="@id/userCabinet" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kinopoisklite.view.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" />
    <fragment
        android:id="@+id/userCabinet"
        android:name="com.kinopoisklite.view.UserCabinetView"
        android:label="user_cabinet_fragment"
        tools:layout="@layout/user_cabinet_fragment" >
        <action
            android:id="@+id/action_userCabinet_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_userCabinet_to_movieList"
            app:destination="@id/movieList" />
    </fragment>
</navigation>